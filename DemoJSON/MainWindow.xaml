<Window x:Class="DemoJSON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoJSON"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button x:Name="btnGet" Content="Button" Click="btnGet_Click"/>
            <TextBox x:Name="txtJson" Height="26" TextWrapping="Wrap" Text=""/>
        </StackPanel>
        <DataGrid x:Name="dgData" Margin="0,54,0,10" ItemsSource="{Binding}" />
    </Grid>
</Window>
